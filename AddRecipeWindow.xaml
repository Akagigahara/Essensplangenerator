<Window x:Class="Essensplangenerator.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Essensplangenerator"
        mc:Ignorable="d"
        Title="Add Recipe" Height="300" Width="420">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="22*"/>
			<RowDefinition Height="39*"/>
			<RowDefinition Height="23*"/>
			<RowDefinition Height="45*"/>
			<RowDefinition Height="119*"/>
			<RowDefinition Height="36*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<TextBlock x:Name="Header" Grid.Row="0">Add a Recipe</TextBlock>
		<TextBox x:Name="RecipeName" Grid.Row="1" >Recipe Name</TextBox>
		<CheckBox x:Name="HasLink_" Grid.Row="2">Include Link?</CheckBox>
		<TextBox x:Name="RecipeLink" Grid.Row="3" Visibility="{Binding IsChecked, ElementName=HasLink_}">Link to Recipe</TextBox>
		<Button Grid.Row="5">Save Recipe</Button>
	</Grid>
</Window>
